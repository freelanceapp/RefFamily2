<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities_fragments.activity_splash.SplashActivity"
        android:background="@drawable/splash2"
        >


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:src="@drawable/splash_bottom"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/imageCar"
            app:layout_constraintVertical_bias=".3"
            android:src="@drawable/logo"
            android:transitionName="logo"
            tools:ignore="UnusedAttribute" />




        <LinearLayout
            android:id="@+id/llLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageLogo"
            app:layout_constraintBottom_toTopOf="@id/imageCar"
            app:layout_constraintVertical_bias=".35"
            android:gravity="center"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/tvLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="@string/choose_language"
                android:textStyle="bold"
                />
            <LinearLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLang"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="5dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tvAr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="عربي"
                        android:gravity="center"
                        android:textColor="@color/gray6"
                        android:textSize="16sp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tvEn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="English"
                        android:gravity="center"
                        android:textColor="@color/gray6"
                        android:textSize="16sp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@color/colorPrimary"
                android:text="@string/next"
                android:layout_marginTop="100dp"
                />
        </LinearLayout>


        <ImageView
            android:id="@+id/town"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/town"
            app:layout_constraintBottom_toBottomOf="parent"
            android:alpha=".4"
            android:scaleType="fitXY"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/imageCar"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/car"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
